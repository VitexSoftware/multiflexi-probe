#!/bin/sh
# postinst script for multiflexi-probe
set -e

. /usr/share/debconf/confmodule

APPLICATION=multiflexi-probe
for file in `ls /usr/lib/$APPLICATION/multiflexi/*.app.json`
do
	multiflexi-cli application import-json --file $file
done

for file in `ls /usr/lib/$APPLICATION/multiflexi/*.credtype.json`
do
	multiflexi-cli credtype import-json --file $file
done
